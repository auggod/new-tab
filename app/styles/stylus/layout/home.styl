.hero
  text-align: center

.home-header
  margin-top: 120px

.hero
  h1
    font-size: 2.5rem  
    font-weight: 700
    line-height: 1
  h2
    margin: 0
    font-size: 1.2rem
    line-height: 1.2
    font-weight: 500
  .home-actions
    margin-bottom: 20px
  .home-actions .btn
    margin: 1rem .5rem .5rem 0
  @media (min-width : 760px)
    h1
      font-size: 4rem
    h2
      font-size: 2rem
  @media (min-width : 1025px)
    h1
      margin: 20px 0
    h2
      margin: 40px 0

@media (min-width : 1025px)
  .hero
    text-align: left

.wrapper-text-content
  position: absolute
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0

.text-content
  position: relative
  top: 50%
  transform: translateY(-50%)
  -webkit-transform: translateY(-50%)
  text-align: center

/*
 * Hr
 */

.box-item-hr hr
  border: 0
  background: url("/img/line.png") repeat
  height: 5px
  margin: 0
  padding: 0
  width: 100%

.box-item-hr hr
  hr:after
    height: 5px

/*
 * Box items
 */

.box-item
  display: block
  padding: 0
  overflow: hidden

#discover
  text-align: center

#discover
  label
    font-size: 2rem
  .input-group-addon
    border-radius: 40px 0 0 40px
  .input-group
    margin: 20px auto
    max-width: 600px
  input
    border-radius: 0 40px 40px 0px
  .box-item
    background-position: center center


.beige-bg
  background: #F3DBBE

.dark-bg
  background: #161616
  color: #fff

.funky-bg
  background: united-nations-blue
  color: #fff

.grey-bg
  background: #F6F6F6
  color: #333

.light-bg
  background: white
  color: #333

.phone
  position: relative
.iphone
  text-align: center
  top: 0
  left: 0
  right: 0
  bottom: 0
  img
    margin-top: 0

@media (max-width: 480px)
  .iphone
    position: relative

@media (min-width: 481px)
  .iphone
    position: absolute

@media (min-width : 1025px)
  .iphone
    img
      margin-top: 55px



// Fixing col padding

#tracklist, #apps
  @media only screen and (min-width: 1025px)
    .row
      .col:nth-child(2), .col:nth-child(3), .col:nth-child(4)
        padding-left: 0

#tracklist .credit
  position: absolute
  font-size: .8rem
  color: #fff
  bottom: 0
  right: 0
  padding: 5px
  background: rgba(0, 0, 0, .8)

