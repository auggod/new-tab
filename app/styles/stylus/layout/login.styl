html, body
  min-height 100%

body
  background: #3F51B5
  font font
  @media(min-width:481px)
    background: linear-gradient(top, #4E6EAC, #3F51B5)

img
  max-width 100%

a
  color inherit

@keyframes slideFromTop
  0%
    opacity 0
    transform translateY(-100%)
  50%
    transform translateY(1%)
  100%
    opacity 1
    transform translateY(0%)

section#login
  animation slideFromTop 300ms $ease-in-out-quad
  position: absolute
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0

.loginInner
  position relative
  border-radius 0
  background rgba(0 0 0 .1)
  transition transform, opacity 200ms $ease-in-out-quad
  width 100%
  height 100%
  margin: 0 auto
  padding 30px 20px
  top 50%
  transform translateY(-50%)
  @media(min-width:481px)
    background rgba(0 0 0 .25)
    border-radius 2px
    max-width: 300px
    height auto
    
input
  background transparent
  letter-spacing 1px
  padding 0
  margin 10px 0 10px 0
  text-align right
  color white
  outline 0
  font-size: 1.4rem
  border 0
  border-bottom: 1px solid #4E6EAC
  line-height 30px
  width 100%
  &:focus
    border-bottom: 1px solid rgba(255 255 255 .7)
  &::-webkit-input-placeholder
    color rgba(255 255 255 .3333)

input.hide
  position absolute
  left -9999px
