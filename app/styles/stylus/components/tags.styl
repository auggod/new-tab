    /*
     * Tags
     */

.tag-list
  margin: 1rem 0
  max-width: 100%

.tag-item
  background-color: #161616
  border-radius: 2px
  color: #f0f0f0
  cursor: pointer
  display: inline-block
  font-size: 10px
  font-size: 1rem
  margin: 0 .5rem .5rem 0
  transition: all .2s ease-out 0.1s

.tag-item a
  line-height: 2
  padding: 0.6rem
