.page 
  top 60px
  right 0
  bottom 0
  left 0
  position absolute
  z-index 5
  width 100%

.outer-page
  position relative

.inner-page.ng-leave, .inner-page.ng-enter
  position: absolute
  width 100%
  top 0
  right 0
  left 0
  bottom 0

.ng-leave
  //animation opacityDown 200ms both $ease-in-out-quad
	z-index 200

.ng-enter
	z-index 300
  //animation opacityUp 200ms both $ease-in-out-quad

.hero
  animation scaleUp 300ms both $ease-in-quad

.zoomIn
  animation zoomIn 200ms both ease-in

@keyframes leftright
  0%
    transform translateX(-100%)
  100%
    transform translateX(0%)

@keyframes rightleft
  0%
    left 0%
  100%
    left -100%

@keyframes zoomIn
  from
    transform scale(1.0)
  to
    transform scale(1.2)

.infiniteRotate
  animation infiniteRotate 100ms infinite
  transform-origin: center

@keyframes infiniteRotate
  0%
    transform rotate(0turn)
  100%
    transform rotate(1turn)

.scaleInfinite
  animation scaleInfinite 200ms infinite

@keyframes scaleInfinite
  from
    transform scale(1) 
  to
    transform: scale(1) 

@keyframes opacityUp
  from
    opacity 0
  to
    opacity 1

@keyframes opacityDown
  from
    opacity 1
  to
    opacity 0

@keyframes scaleUp
  from
    opacity 0
    transform scale(0.5)

@keyframes scaleSlow
  from
    transform scale(1)
  to
    transform scale(1.1)

@keyframes morph
  0%
    //opacity: 0
    border-radius: 50%
    transform scale(0.5)
  100%
    //opacity: 1
    border-radius: 0%
    transform scale(1)

@keyframes pop
  0%
    opacity 0
    transform scale(0.5)
  70%
    opacity 0.90
    transform scale(1.1)
  100%
    opacity 1
    transform scale(1)

@keyframes scaleDown
  from
    opacity 0
    transform scale(1.2)
  to
    opacity 1
    transform scale(1)

@keyframes bounce
  0%
    transform translate3d(0, 0, 0)
  50%
    transform translate3d(0, 10px, 0)
  100%
    transform translate3d(0, 0, 0)

@keyframes pointRight
  0%
    transform translate3d(0, 0, 0)
  50%
    transform translate3d(10px, 0, 0)
  100%
    transform translate3d(0, 0, 0)
