// Bootstrap

// Dropdown menu

.dropdown-menu
  display none
  background rgba(255, 255, 255, 1)
  box-shadow 0 0 1px rgba(0, 0, 0, .5)
  border-radius 4px
  padding: 5px 0 5px 0
  
  float: left
  position absolute
  top: 100%
  z-index: 9999

.dropdown
  display: inline-block
  @media (min-width : 760px)
    position: relative

ul.dropdown-menu
  a
    color: #333!important
    display: block
    line-height: 3
    padding: 0 10px
  a:hover
    background-color: rgb(0, 0, 0)
    text-decoration none
    color: #fff!important

.dropdown-menu, .dropdown-list
  .divider
    border-bottom: 1px solid #ddd

.dropdown-toggle
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  display: block
  background: transparent
  cursor pointer
  font-size: 1.2rem

#top-bar .dropdown-toggle
  padding: 0 10px 0 10px
  small
    line-height: 60px

//.open
//& > .dropdown-toggle

.caret
  display: inline-block
  width: 0
  height: 0
  margin-left: 5px
  vertical-align: middle
  border-top: 4px solid #000
  border-left: 4px solid transparent
  border-right: 4px solid transparent

.dropdown-menu .dropdown-caret
  position: absolute;
  top: -7px
  right: 20px

.dropdown-caret .caret-outer, .dropdown-caret .caret-inner
  visibility: hidden
  position: absolute
  top: 0
  left: 0
  display: inline-block
  margin-left: -1px


.dropdown-caret .caret-outer
  border-left: 7px solid transparent
  border-right: 7px solid transparent
  border-bottom: 7px solid #aaa
  border-bottom-color: rgba(0,0,0,.2)

.dropdown-caret .caret-inner
  top: 1px
  left: 1px
  display: inline-block
  border-left: 6px solid transparent
  border-right: 6px solid transparent
  border-bottom: 6px solid white

a.dropdown-toggle
  color: #fff
.dropdown-menu .btn
  display inline-block

.dropdown-caret .caret-outer, .dropdown-caret .caret-inner
  visibility: visible

.dropdown-menu, .dropdown-caret
  right: 0

#top-bar .dropdown-menu
  margin-top: -100px
  @media (max-width : 760px)
    left: 0
    right: 0
  @media (min-width : 760px)
    min-width: 200px
    right: 0

.open
  & > .dropdown-menu
    display block
  & > a
    outline 0

#top-bar .open
  & > .dropdown-menu
    margin-top: 1px
    @media (min-width : 760px)
      margin-right: 8px

.dropdown-menu li
  display: block
  padding: 0
.dropdown-menu form
  padding: 10px
  label
    float: left
    color: #666
    font-size: 10px
    font-size: .8rem
    line-height: .5
    padding: 0
  input
    margin: 10px 0
    width: 100%
    text-indent: 10px
