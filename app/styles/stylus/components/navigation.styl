/*
 * Header & Navigation
 */

header, .side-bar
  background: white

header
  position: relative
  height: 60px
  width: 100%

#top-bar
  transition: transform 200ms $ease-in-out-quad
  transform: translate3d(0,0,0)
  position: fixed
  width: 100%
  top: 0
  left: 0
  background: rgb(63, 81, 181)
  z-index: 500
  box-shadow: 0 0 1px #333
  h1
    margin: 0

#top-bar.slide
  transition: transform 200ms $ease-in-out-quad
  transform: translate3d(250px,0,0)

.app-icon
  display: block

#top-bar-left
  float: left

#top-bar-right
  float: right

#top-bar-center
  position: absolute
  z-index: -1
  left: 25%
  right: 25%
  width: 50%
  h1
    text-align: center

nav > li
  position: relative
nav > li a, .nav > li a
  color: #fff
  display: block

nav > li a.active
  &:after
    border-radius: 50%
    content: ""
    position: absolute
    background: rgba(255 255 255 .5)
    width: 6px
    height: 6px
    bottom: 8px
    left: 50%

nav > li, .nav > li
  list-style: none
  display: inline-block
  line-height: 60px
  
nav.main-navigation
  text-align: center
  color: #fff
  
nav.main-navigation li
  font-size: 1.2rem
  display: none
  letter-spacing: 1px
  vertical-align: bottom
  @media(min-width:768px)
    display: inline-block

nav.main-navigation li#app-icon
  display: block
  @media(min-width:768px)
    display: inline-block

nav > li > a
  padding: 0 5px 0 5px
  @media(min-width:960px)
    padding: 0 10px 0 10px
.nav > li > a
  padding: 0 10px 0 10px

#segmentNav
  li
    font-size: 1.4rem
    border-bottom: 2px solid transparent
  li > a
    line-height: 60px
    padding: 0 10px
  li:hover
    border-bottom: 2px solid #000

#segmentView
  min-height: 600px

/*
 * Side-bar
 */

.side-bar
  transition: transform 200ms $ease-in-out-quad
  transform: translate3d(-100%,0,0)
  background: RGBA(39, 39, 39, 1)
  width: 250px
  position: fixed
  z-index: 400
  top: 0
  left: 0
  bottom: 0
  right: 0

.side-bar
  .list
    border-top: 1px solid #222
    margin: 0
  .list-item
    color: #fff
    display: inline-block
  .list-content
    text-indent: 10px
  .list-content
    font: normal 500 1.2rem/60px 'aktiv-grotesk-std', sans-serif
  .list-item .icon
    background: none
    display: block
    float: left
    color: #fff
    line-height: 0


.side-bar.slide
  transition: transform 200ms $ease-in-out-quad
  transform: translate3d(0,0,0)
  overflow-y: auto

/*
 * Footer
 */

footer
  margin: 0
  padding: 20px 0 20px 0
  background: footer-color
  dt, dd
    font-weight: 300
  dd
    line-height: 1.5em
  dt
    letter-spacing: 0.2em
    color: #fff
    text-transform: uppercase
  a
    color: #ccc
    text-shadow: 0px 0px 1px #000
    text-decoration: none
  p
    color: #f0f0f0
    padding: 10px 10px 0 0px
