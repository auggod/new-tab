

/* 
 * Headings
 *
 */

h1, h2, h3, h4, h5, h6
  font-family: proxima-soft
  font-size: inherit
  font-weight: 400
  small
    font-family: 'aktiv-grotesk-std', 'Helvetica Neue', Helvetica, Arial, sans-serif
    padding-left: 10px
    text-transform: uppercase

h1
  font-weight: 600
  font-size 26px
  letter-spacing: 1px
  font-size 2.6rem
  padding: 1rem 0
  margin: 1rem 0
  line-height 1
  small
    font-size 10px
    font-weight: 400
    font-size: 1rem

h2
  font-weight: 600
  font-size 22px
  font-size 2.2rem
  padding: 0.8rem 0
  margin: 0.8rem 0
  line-height 1.1818
  small
    font-size 10px
    font-weight: 400
    font-size: 1rem

h3
  font-size 18px
  font-weight: 400
  font-size 1.8rem
  line-height: 1.444
  small
    font-size 12px
    font-size: 1.2rem

h4
  font-size 16px
  font-size 1.6rem
  line-height: 1.625
  small
    font-size 10px
    font-size: 1rem

h5
  font-size 12px
  font-size 1.2rem
  line-height: 1.4

h6
  font-size 10px
  font-size 1rem
  line-height: 1.2

p
  line-height: 1.1818

/* 
 * Contrast
 * Light vs Dark
 */

.bg-light
  background #f0f0f0
  color #333

.bg-dark
  background #333
  color #fff

.bg-sc
  background #F96100
  color #fff

// Min vertical heights

.full-vh
  min-height: calc(100vh - 60px)

.three-quarter-vh
  min-height: calc(75vh - 45px)

.half-vh
  min-height: calc(50vh - 30px)

.quarter-vh
  min-height: calc(25vh - 25px)

.third-vh
  min-height: calc(33vh - 20px)

.box-item
  position: relative
